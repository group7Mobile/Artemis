<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.artemis">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.WRITE_SETTINGS"
        tools:ignore="ProtectedPermissions" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_artemis"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".Favourites"
            android:parentActivityName=".Settings"/>
        <activity android:name=".Account_Login" />
        <activity android:name=".EnterPassword" />
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize" />
        <activity android:name=".AccountPage"
            android:parentActivityName=".Settings"/>
        <activity android:name=".About"
            android:parentActivityName=".Settings"/>
        <activity android:name=".Filters"
            android:parentActivityName=".Settings"/>
        <activity android:name=".AlertSettings"
            android:parentActivityName=".Settings"/>
        <activity android:name=".Privacy"
            android:parentActivityName=".Settings"/>
        <activity android:name=".PopUpBlocking"
            android:parentActivityName=".Settings"/>
        <activity android:name=".Passwords"
            android:parentActivityName=".Settings"/>
        <activity android:name=".Favourites"
            android:parentActivityName=".Settings"/>
        <activity android:name=".Background"
            android:parentActivityName=".Settings"/>
        <activity android:name=".Shortcuts"
            android:parentActivityName=".Settings"/>
        <activity android:name=".TimeTable"
            android:parentActivityName=".Settings"/>
        <activity android:name=".HomePageWidgets"
            android:parentActivityName=".Settings"/>
        <activity android:name=".HomePage"
            android:parentActivityName=".Settings"/>
        <activity android:name=".ScreenTime"
            android:parentActivityName=".Settings"/>
        <activity android:name=".BlackList"
            android:parentActivityName=".Settings"/>
        <activity android:name=".Settings"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".Splash_Screen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>